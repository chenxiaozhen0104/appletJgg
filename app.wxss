/* 公共样式 */

.common-btn {
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4272ff;
  border-radius: 10px;
  margin-top: 56rpx;
  margin-bottom: 30rpx;

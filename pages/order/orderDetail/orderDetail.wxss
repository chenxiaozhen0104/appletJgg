/* pages/order/orderDetail/orderDetail.wxss */

.orderDetail-container {
  width: 100%;
  min-height: 100%;
}

.orderDetail-content {
  padding: 0 20rpx;
  padding-bottom: 120rpx;
}

.orderDetail-row {
  background-color: #fff;
  padding: 0rpx 15rpx;
  font-size: 30rpx;
}

.orderDeatil-col {
  padding: 10rpx 0;
  position: relative;
  display: flex;
}

.order-number {
  padding: 25rpx 0;
}

.orderDetail-titleColor {
  color: #c0c0c0;
  margin-right: 10rpx;
}

.orderStatus-img {
  width: 150rpx;
  height: 70rpx;
  position: absolute;
  right: -20rpx;
  top: 14rpx;
}

.orderDetail-colTitle {
  display: inline-flex;
  width: 150rpx;
}

.orderDeatail-text {
  display: inline-flex;
  height: auto;
  flex: 1;
}

.orderDetail-title {
  margin: 20rpx;
  display: inline-block;
  position: relative;
  font-size: 33rpx;
  padding-left: 12rpx;
}

.orderDetail-title::before {
  content: "";
  width: 8rpx;
  height: 30rpx;
  background-color: #4272ff;
  position: absolute;
  left: -15rpx;
  top: 8rpx;
}

.orderDetail-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  height: 95rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.footer-text {
  width: 710rpx;
  height: 75rpx;
  background-color: #4272ff;
  justify-content: center;
  align-items: center;
  color: #fff;
  display: inline-flex;
  font-size: 32rpx;
  border-radius: 5rpx;
}

.footer-text:active {
  opacity: 0.5;
}

/*时间轴样式  */

.track-rcol {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.track-list {
  padding-left: 30rpx;
  position: relative;
}

.time-style {
  padding-top: 5rpx;
  padding-left: 40rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  border-left: 1px solid #d6d6d6;
  color: #728594;
  font-size: 31rpx;
}

.time-circle {
  position: absolute;
  left: 18rpx;
  top: 0;
  height: 25rpx;
  width: 25rpx;
}

.time {
  margin-right: 5rpx;
  padding-bottom: 10rpx;
  color: #c0c0c0;
  font-size: 31rpx;
}

.txt {
  margin-right: 5rpx;
  padding-bottom: 10rpx;
  color: #c0c0c0;
  font-size: 31rpx;
}

.time-color {
  font-size: 31rpx;
  color: #728594;
}

.orderDetail-phone {
  color: #4272ff;
}

.orderDetail-imgList {
  height: 200rpx;
  width: 200rpx;
  margin-right: 25rpx;
}

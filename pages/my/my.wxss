/* pages/my/my.wxss */

.my-container {
  min-height: 100%;
  width: 100%;
  background-color: #f5f5f5;
  position: relative;
}

.my-logo {
  height: 200rpx;
  background-color: #4272ff;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  padding: 0 15rpx;
  color: #fff;
  /* border-bottom: 1px solid #4272ff; */
}

.mylogo-box {
  padding: 0 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.mylogo-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
}

.mylogo-text {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  font-size: 40rpx;
}

.my-list {
  height: auto;
  padding-left: 15rpx;
  padding-right: 15rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.myList-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
  padding: 20rpx 0;
  align-items: center;
}

.myLast-item {
  border-bottom: none;
}

.listItem-text {
  font-size: 32rpx;
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
}

.listItem-icon {
  width: 200rpx;
  display: flex;
  align-items: center;
}

.listItem-skill {
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}

.listItem-img {
  width: 40rpx;
  height: 55rpx;
}

/* 授权获取用户信息 */

.toast {
  width: 400rpx;
  height: 90rpx;
  background-color: rgba(40, 40, 40, 0.6);
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* pages/balance/balance.wxss */

.balance-container {
  width: 100%;
  min-height: 100%;
  font-size: 30rpx;
}

.balance-num {
  height: 240rpx;
  background-color: #4272ff;
  padding-left: 20rpx;
  padding-top: 20rpx;
  color: #fff;
}

.balance-money {
  font-size: 120rpx;
  margin-top: 30rpx;
}

.balance-item {
  min-height: 90rpx;
  background-color: #fff;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.balance-itemText {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* background-color: red; */
}

.balance-item>text {
  color: #333;
  font-size: 30rpx;
}

.balance-img {
  width: 50rpx;
  height: 50rpx;
}

.balance-img:first-child {
  margin-right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

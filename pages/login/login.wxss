/* pages/login/login.wxss */

.login-container {
  width: 100%;
  height: 100%;
  padding: 30rpx;
  display: flex;
  font-size: 14px;
  color: #acacac;
  margin-top: 100rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.login-form {
  width: 100%;
  height: auto;
  background-color: #fff;
  border: 1px solid #dcdcdc;
  border-radius: 5px;
}

.login-row {
  width: 100%;
  min-height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #dcdcdc;
}

.login-sms {
  min-height: 80rpx;
  display: flex;
  flex: 8;
  align-items: center;
  flex-direction: row;
  border-right: 1px solid #dcdcdc;
}

.login-getCode {
  min-height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #4272ff;
  background-color: transparent;
  border: none;
  outline: none;
  font-size: 14px;
  border-radius: 0;
  position: static;
}

.login-row:last-child {
  border: none;
}

.login-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4272ff;
  margin-top: 30px;
  opacity: 1;
  color: #fff;
  font-size: 14px;
  border-radius: 5px;
}

.btnHover {
  opacity: 0.8;
}

.noBorder {
  border: none;
}
